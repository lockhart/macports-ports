# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:ft=tcl:et:sw=4:ts=4:sts=4

PortSystem          1.0
PortGroup           conflicts_build 1.0

name                omniORB
version             4.3.2
categories          devel
universal_variant   no
# executables are GPL, libs are LGPL
license             {LGPL GPL-2+}
maintainers         nomaintainer

description         high performance CORBA ORB for C++
long_description    omniORB is a robust high performance CORBA ORB for C++ and \
                    Python. omniORB is largely CORBA 2.6 compliant.
homepage            http://omniorb.sourceforge.net/

conflicts_build     ${name}

master_sites        sourceforge:project/omniorb/omniORB/omniORB-${version}/
use_bzip2           yes
checksums           rmd160  d217c9c90ead46f4ad26abc03c81606795122146 \
                    sha256  1c745330d01904afd7a1ed0a5896b9a6e53ac1a4b864a48503b93c7eecbf1fa8 \
                    size    2614418

post-patch {
    reinplace "s|\\(\$(CXXLINKOPTIONS)\\)|\\1 [get_canonical_archflags cxx]|g" \
        ${worksrcpath}/mk/beforeauto.mk.in
}

configure.args      CC="${configure.cc}" \
                    CXX="${configure.cxx}" \
                    CCFLAGS="[get_canonical_archflags cc]" \
                    EXTRA_GCC_CXXFLAGS="[get_canonical_archflags cxx]" \
                    --with-omniORB-config="${prefix}/etc/omniORB.cfg" \
                    --with-omniNames-logdir="${prefix}/var"

if {${build_arch} eq "x86_64" && ${os.platform} eq "darwin"} {
    configure.args-append --build=${build_arch}-apple-${os.platform}${os.version}
}

# force a global variable
set python_framework []

variant python38 conflicts python39 python310 python311 python312 description {Build Python 3.8 IDL support} {
    configure.python            ${prefix}/bin/python3.8
    set python_framework        ${frameworks_dir}/Python.framework/Versions/3.8/lib
    depends_lib-append          port:python38
    configure.pkg_config_path   ${python_framework}/lib/pkgconfig

    notes "Install py38-omniORBpy for omniORBpy."
}

variant python39 conflicts python38 python310 python311 python312 description {Build Python 3.9 IDL support} {
    configure.python            ${prefix}/bin/python3.9
    set python_framework        ${frameworks_dir}/Python.framework/Versions/3.9/lib
    depends_lib-append          port:python39
    configure.pkg_config_path   ${python_framework}/lib/pkgconfig

    notes "Install py39-omniORBpy for omniORBpy."
}

variant python310 conflicts python38 python39 python311 python312 description {Build Python 3.10 IDL support} {
    configure.python            ${prefix}/bin/python3.10
    set python_framework        ${frameworks_dir}/Python.framework/Versions/3.10/lib
    depends_lib-append          port:python310
    configure.pkg_config_path   ${python_framework}/lib/pkgconfig

    notes "Install py310-omniORBpy for omniORBpy."
}

variant python311 conflicts python38 python39 python310 python312 description {Build Python 3.11 IDL support} {
    configure.python            ${prefix}/bin/python3.11
    set python_framework        ${frameworks_dir}/Python.framework/Versions/3.11/lib
    depends_lib-append          port:python311
    configure.pkg_config_path   ${python_framework}/lib/pkgconfig

    notes "Install py311-omniORBpy for omniORBpy."
}

variant python312 conflicts python38 python39 python310 python311 description {Build Python 3.12 IDL support} {
    configure.python            ${prefix}/bin/python3.12
    set python_framework        ${frameworks_dir}/Python.framework/Versions/3.12/lib
    depends_lib-append          port:python312
    configure.pkg_config_path   ${python_framework}/lib/pkgconfig

    notes "Install py312-omniORBpy for omniORBpy."
}

if {![variant_isset python38] && ![variant_isset python39]
    && ![variant_isset python310] && ![variant_isset python311]
    && ![variant_isset python312]} {
    default_variants +python312
}

variant ssl description {Enable SSL support} {
    configure.args-append   --with-openssl
    depends_lib-append      path:lib/libssl.dylib:openssl
}

post-destroot {
    # omniORB for python3x installs into /opt/local/lib/python3.x/site-packages/
    # but omniORBpy installs into /opt/local/Library/Frameworks/Python.framework/Versions/X.Y/
    # so adjust locations for this package
    file mkdir [file normalize ${destroot}${python_framework}]
    file rename [glob ${destroot}${prefix}/lib/python*] ${destroot}${python_framework}
}

livecheck.type      regex
livecheck.url       http://omniorb.sourceforge.net/
livecheck.regex     "${name}-(\\d+(?:\\.\\d+)*)"
